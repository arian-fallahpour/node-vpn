extends _base
include items/error

block append head
    link(rel='stylesheet' href=`/css/resetPassword.css`)

block content
    section.section.section--panel
        .row
            .col.u-grid-content-center.col-panel
                .panel.resetPassword
                    h2.header-2.u-center-text Reset password
                    h6.header-6.u-center-text.resetPassword__message.u-none-text=message
                    .notice
                    form.credentialsForm
                        .inputField.inputField--pass
                            input(type="password" id="newPassword" name="newPassword" placeholder="new password" title="Type your new password")
                            label(for="newPassword") new password
                            button.btn.btn__primary.btn__reveal(title="View password" type="button")
                                i.bi.bi-eye-fill
                                i.bi.bi-eye-slash-fill
                            .tooltip.tooltip--right 
                                h6.header-6 requirements
                                ul.ul
                                    li Min 8 characters
                                    li 1 uppercase
                                    li 1 number
                        .inputField.inputField--pass
                            input(type="password" id="confirmPassword" name="confirmPassword" placeholder="confirm password" title="Type your confirmation password")
                            label(for="confirmPassword") confirm password
                            button.btn.btn__primary.btn__reveal(title="View password" type="button")
                                i.bi.bi-eye-fill
                                i.bi.bi-eye-slash-fill
                        button.btn.btn__secondary.credentialsForm__submit(title="Submit form" data-redirect=redirect)
                            span reset password
                            i.bi.bi-check-lg.success-icon
                    

